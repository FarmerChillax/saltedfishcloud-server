[
  {
    "name": "common",
    "title": "基础配置",
    "nodes": [
      {
        "name": "注册配置",
        "area": "sys.register",
        "nodes": [
          {
            "name": "sys.register.reg_code",
            "inputType": "text",
            "title": "注册邀请码",
            "defaultValue": "114514",
            "describe": "当开启“邀请码注册”时，游客注册账号所需的邀请码"
          },
          {
            "name": "sys.register.enable_email_reg",
            "inputType": "switch",
            "title": "启用邮箱注册",
            "describe": "允许使用邮箱注册",
            "defaultValue": false
          },
          {
            "name": "sys.register.enable_reg_code",
            "inputType": "switch",
            "title": "启用邀请码注册",
            "describe": "允许使用邀请码注册",
            "defaultValue": true
          }
        ]
      },
      {
        "name": "存储配置",
        "area": "sys.store",
        "nodes": [
          {
            "name": "sys.store.mode",
            "title": "存储模式",
            "defaultValue": "UNIQUE",
            "describe": "系统基础存储系统的数据组织方式。\nRAW为原始存储，在目标存储系统上的文件结构与用户网盘的文件结构保持一致。\nUNIQUE为唯一存储，按文件哈希值统一组织文件，相同文件只会存储一份",
            "inputType": "select",
            "options": [
              {
                "title": "RAW",
                "value": "RAW"
              },
              {
                "title": "UNIQUE",
                "value": "UNIQUE"
              }
            ]
          },
          {
            "name": "sys.store.sync_interval",
            "inputType": "text",
            "title": "自动同步间隔",
            "describe": "文件记录服务与存储服务文件信息自动执行同步的间隔。\n单位：分钟，-1关闭",
            "defaultValue": "-1"
          }
        ]
      },
      {
        "title": "常规",
        "name": "general",
        "nodes": [
          {
            "name": "sys.common.version",
            "title": "系统版本",
            "describe": "当前系统的主版本号",
            "defaultValue": "1.0.0.0-SNAPSHOT",
            "readonly": true,
            "inputType": "text"
          },
          {
            "name": "sys.common.mail_properties",
            "title": "发信服务器配置",
            "describe": "系统发送邮件时连接的发信服务器配置",
            "defaultValue": "",
            "inputType": "form",
            "typeRef": "com.xiaotao.saltedfishcloud.service.mail.MailProperties"
          }
        ]
      }
    ]
  },
  {
    "name": "proxy-node",
    "title": "代理节点",
    "nodes": [
